    <div class="button-container">
        <button onclick="alert('Button1 Clicked!')">Button1</button>
    </div>

    
    <div class="button-container">
        <button class="submit-button" onclick="alert('Button2 Clicked!')">Button2</button>
    </div>

    <div class="button-container">
        <button onclick="showAlert()" class="Button3 Clicked">Button3</button>
    </div>

    <div class="button-container">
        <button onclick="confirmAction()" class="Button4 Clicked">Button4</button>
    </div>

    <script>
        function showAlert() {
            alert('Button3 Clicked!');
        }

        function confirmAction() {
            if (confirm('Button4 Clicked')) {
                alert('U Clicked all Button!');
            } 
        }
    </script>
